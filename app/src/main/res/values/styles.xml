<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BottomNavigationView"
        parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="BottomNavigationView.Active"
        parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="text_regular">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="text_title_extra_large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="text_title_small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="text_action">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="input_amount">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="input_regular">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="button_enabled_accent">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:background">@drawable/form_button_accent_state</item>
    </style>

</resources>