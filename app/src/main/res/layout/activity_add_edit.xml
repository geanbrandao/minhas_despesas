<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="textEnd"
    tools:context=".ui.AddEditActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/component_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0">

        <com.geanbrandao.eventmanager.utils.CustomAppCompatButton
            android:id="@+id/button_save"
            style="@style/button_enabled_accent"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginTop="32dp"
            android:stateListAnimator="@null"
            android:text="@string/button_default_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_description" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_currency"
            style="@style/text_title_extra_large"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="R$"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/input_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/input_amount" />

        <com.geanbrandao.eventmanager.utils.CustomAppCompatEditText
            android:id="@+id/input_amount"
            style="@style/input_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="0,00"
            android:padding="16dp"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_currency"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0,00" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/input_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_currency"
            app:layout_constraintTop_toBottomOf="@+id/input_amount" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_text"
            style="@style/text_title_extra_large"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_text_fields"
            app:layout_constraintBottom_toBottomOf="@+id/input_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/input_title"
            app:tint="@color/colorAccent" />

        <com.geanbrandao.eventmanager.utils.CustomAppCompatEditText
            android:id="@+id/input_title"
            style="@style/input_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="Nome"
            android:maxLines="1"
            android:padding="16dp"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_text"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/input_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_text"
            app:layout_constraintTop_toBottomOf="@+id/input_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_calendar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="@+id/text_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_date"
            app:tint="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_date"
            style="@style/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="Sexta, 01 Janeiro"
            android:textAlignment="textEnd"
            android:drawablePadding="8dp"
            app:drawableTint="@color/colorAccent"
            android:drawableEnd="@drawable/ic_arrow_right_small"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_calendar"
            app:layout_constraintTop_toBottomOf="@+id/input_title" />

        <com.geanbrandao.eventmanager.utils.CustomAppCompatEditText
            android:id="@+id/input_description"
            style="@style/input_regular"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="Descrição do item (opcional)"
            android:maxLines="1"
            android:padding="16dp"
            android:gravity="top"
            android:maxLength="150"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_date"
            android:layout_marginTop="16dp"/>

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/input_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/input_description"
            app:layout_constraintTop_toBottomOf="@+id/input_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>