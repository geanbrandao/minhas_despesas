<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/colorWhite">

    <com.geanbrandao.eventmanager.utils.CustomAppCompatButton
        android:id="@+id/button_cancel"
        style="button_enabled"
        android:layout_width="0dp"
        android:layout_height="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_save"
        app:layout_constraintTop_toTopOf="parent" />

    <com.geanbrandao.eventmanager.utils.CustomAppCompatButton
        android:id="@+id/button_save"
        android:layout_width="0dp"
        android:layout_height="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_cancel"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_currency"
        style="@style/text_title_extra_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/input_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/input_amount" />

    <com.geanbrandao.eventmanager.utils.CustomAppCompatEditText
        android:id="@+id/input_amount"
        style="@style/input_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:hint="0,00"
        android:padding="16dp"
        android:textAlignment="textEnd"
        tools:text="0,00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_currency"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/input_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_currency"
        app:layout_constraintTop_toBottomOf="@+id/input_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>